    {
        "type":      "range",
        "id":        "style_right",
        "min":       0,
        "max":        500,
        "step":       5,
        "unit":       "px",
        "label":     "Space Right",
        "default":   0
    }
	],
  "blocks": [
    {
      "type": "service",
      "name": "Banner Item",
      "settings": [
        {
        "type": "header",
        "content": "Service Settings"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Service Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Content"
        },
        {
        "type": "header",
        "content": "Button Settings"
        },
        {
          "type": "url",
          "id": "link_banner",
          "label": "Button Link"
        },
        {
          "type": "text",
          "id": "banner_button",
          "label": "Button Title"
        }
      ]
    }
  ],
	"presets": [{
      "name": "Service List",
      "category": "Main Spa"
  	}]
