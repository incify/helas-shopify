<div data-section-id="{{ section.id }}" class="spa-service-list-section{% if section.settings.banner_space == 'yes' %} has-space{% endif %}">
    {% include "block_title" %}
    <div class="spa-serive-list{% if section.settings.width_layout == 'boxed' %} container{% else %} container-fluid max-width-1920{% endif %}">
      <div{% if section.settings.width_layout == 'boxed' %} class="row"{% endif %}>
        <div class="grid-x{% if section.settings.banner_space == 'yes' %} grid-padding-y grid-padding-x{% endif %}{% if section.settings.banner_space == 'small' %} small-space{% endif %} small-up-1 medium-up-{{section.settings.grid_2}} large-up-{{section.settings.grid}}">
          {% for block in section.blocks %}
          <div class="cell">
            <div class="server-list-item">
              <div class="col-sm-4 col-md-5">
                <img src="{{ block.settings.image | img_url: 'master' }}" />
              </div>
              <div class="col-sm-8 col-md-7">
                <div class="server-list__content">
                  <h4>{{ block.settings.title }}</h4>
                  <p>
                    {{ block.settings.text }}
                  </p>
                  {% if  block.settings.link_banner != blank %}
                  <p>
                    <a href="{{ block.settings.link_banner }}" class="btn-button bordered uppercase">{{ block.settings.banner_button }}</a>
                  </p>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>
    </div>
</div>
{% if section.settings.enable_style == true %}
<span class="custom-styles-css">
  body div[data-section-id="{{ section.id }}"]{
    {% if section.settings.style_top != '' %}
    margin-top:{{ section.settings.style_top }}px;
    {% endif %}
    {% if section.settings.style_bottom != '' %}
    margin-bottom:{{ section.settings.style_bottom }}px;
    {% endif %}
    {% if section.settings.style_left != '' %}
    margin-left:{{ section.settings.style_left }}px;
    {% endif %}
    {% if section.settings.style_right != '' %}
    margin-right:{{ section.settings.style_right }}px;
    {% endif %}
  }
</span>
{% endif %}
