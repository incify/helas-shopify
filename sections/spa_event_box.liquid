<div data-section-id="{{ section.id }}" class="section__spa-event-box parallax-box">
  {% include "block_title" %}
  <div class="spa-event-box">
    <div class="container">
      <div class="row">
          <div class="slick-carousel" data-slick='{"slidesToShow":1, "slidesToScroll":1, "dots": false, "autoplaySpeed":5000, "speed":300,"infinite":false}'>
            {% for block in section.blocks %}
            <div class="spa-event-item row">
              <div class="col-sm-10 col-lg-offset-2 col-lg-8 col-sm-offset-1">
                <img src="{{ block.settings.image | img_url: 'master' }}" />
              </div>
              <div class="col-sm-10 col-lg-offset-2 col-lg-8 col-sm-offset-1 lg-pt-30 xs-pb-50">
                <h2>{{ block.settings.title }}</h2>
                <div class="shortcode-countdown">
                  <div class="product-date clearfix" data-date="{{ block.settings.to_date }}"></div>
                </div>
                <p>{{ block.settings.content }}</p>
                {%- if block.settings.button_url != blank -%}
                  <a href="{{ block.settings.button_url }}" class="btn-button black uppercase">{{ block.settings.button_text }}</a>
                {%- endif -%}
              </div>
            </div>
            {% endfor %}
          </div>
      </div>
    </div>
  </div>
</div>
<span class="custom-styles-css">
body div[data-section-id="{{ section.id }}"]{
  {% if section.settings.background %}
  background-image:url({{ section.settings.background | img_url: 'master' }});
  background-repeat: no-repeat;
  background-size: cover;
  background-position: 50% 50%;
  {% endif %}
  {% if section.settings.enable_style == true %}
    {% if section.settings.style_top != '' %}
    margin-top:{{ section.settings.style_top }}px;
    {% endif %}
    {% if section.settings.style_bottom != '' %}
    margin-bottom:{{ section.settings.style_bottom }}px;
    {% endif %}
    {% if section.settings.style_left != '' %}
    margin-left:{{ section.settings.style_left }}px;
    {% endif %}
    {% if section.settings.style_right != '' %}
    margin-right:{{ section.settings.style_right }}px;
    {% endif %}
  {% endif %}
}
body div[data-section-id="{{ section.id }}"] .special-offters-box {
  background-color: {{ section.settings.background_color }}
}
</span>
