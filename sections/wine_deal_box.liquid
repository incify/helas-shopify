<div data-section-id="{{ section.id }}" data-section-type="wine-deal" class="section__wine-deal {% if section.settings.preset == '' %}style_1{% endif %}{{section.settings.preset}}{% if section.settings.enable_style == true %} incify-styles{% endif %}"{% if section.settings.enable_style == true %} data-styles='{
  {% if section.settings.style_top != '' %}
  "margin-top":"{{ section.settings.style_top }}px",
  {% endif %}
  {% if section.settings.style_bottom != '' %}
  "margin-bottom":"{{ section.settings.style_bottom }}px",
  {% endif %}
  {% if section.settings.style_left != '' %}
  "margin-left":"{{ section.settings.style_left }}px",
  {% endif %}
  {% if section.settings.style_right != '' %}
  "margin-right":"{{ section.settings.style_right }}px"
  {% endif %}
}'{% endif %}>
  <div class="wine-deal">
    <div class="row wine-deal__inner">
        <div class="col-md-6 wine-deal__col incify-lazyload-image" data-background-image="{{ section.settings.left_image | img_url: 'master' }}">
            <div class="wine-deal__left-column">
              <div class="wine-deal__left-column--content">
                {% include 'shortcode' load: section.settings.left_text %}
              </div>
            </div>
        </div>
        <div class="col-md-6  wine-deal__col incify-lazyload-image" data-background-image="{{ section.settings.right_image | img_url: 'master' }}">
            <div class="wine-deal__right-column">
              <div class="wine-deal__right-column--content">
                <div class="{{ section.settings.preset_section_title }} {% if section.settings.sub_title != blank %}sub-title-enable{% endif %}">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="section-title">
                                {% if settings.language_enable %}
                                <span class="lang1">{{ section.settings.title | split: '|' | first }}</span>
                                <span class="lang2">{{ section.settings.title | split: '|' | last }}</span>
                                {% else %}
                                <span>{{ section.settings.title | split: '|' | first }}</span>
                                {% endif %}
                            </div>
                            {% if section.settings.preset_section_title == 'style_7' %}
                            <div class="sub-image">
                                <img src="{{ 'leaf.png' | asset_url }}" alt="sub-image">
                            </div>
                            {% endif %}
                            {% if section.settings.sub_title != blank %}
                            {% if section.settings.preset_section_title == 'style_8' %}
                            <div class="sub-image">
                                <img src="{{ 'm15-i1.png' | asset_url }}" alt="sub-image">
                            </div>
                            {% endif %}
                            <div class="section-sub-title">
                                {{ section.settings.sub_title }}
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
                {% include 'shortcode' load: section.settings.right_text %}
              </div>
            </div>
        </div>
    </div>
  </div>
</div>
