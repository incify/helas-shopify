<div class="faq-banner-contact">
  <div class="container">
    <div class="row">
      <div class="col-sm-8">
        <h2 class="banner--title">{{ section.settings.banner_title }}</h2>
        <p class="banner--sub-title">{{ section.settings.banner_sub_title }}</p>
      </div>
      {% if section.settings.banner_button != blank and section.settings.banner_button_url != blank %}
      <div class="col-sm-4 banner--button-act">
        <a class="btn-button bordered black" href="{{ section.settings.banner_button_url }}">{{ section.settings.banner_button }}</a>
      </div>
      {% endif %}
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Banner Contact",
  "settings": [
    {
      "type": "header",
      "content": "Banner Settings"
    },
    {
      "type": "text",
      "id": "banner_title",
      "label": "Banner Title"
    },
    {
      "type": "text",
      "id": "banner_sub_title",
      "label": "Banner Sub Title"
    },
    {
      "type": "text",
      "id": "banner_button",
      "label": "Banner Button"
    },
    {
      "type": "text",
      "id": "banner_button_url",
      "label": "Banner Button URL"
    }
  ],
  "presets": [
    {
      "name": "Banner Contact",
      "category": "FAQs Page"
    }
  ]
}
{% endschema %}
