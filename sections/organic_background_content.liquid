<div data-section-id="{{ section.id }}" data-section-type="organic-background-content-section" class="section__organic-background-content {% if section.settings.enable_parallax == true %}parallax-box{% endif %} {{section.settings.banner_preset}} incify-styles" data-styles='{
  {% if section.settings.enable_style == true %}
    {% if section.settings.style_top != '' %}
    "margin-top":"{{ section.settings.style_top }}px",
    {% endif %}
    {% if section.settings.style_bottom != '' %}
    "margin-bottom":"{{ section.settings.style_bottom }}px",
    {% endif %}
    {% if section.settings.style_left != '' %}
    "margin-left":"{{ section.settings.style_left }}px",
    {% endif %}
    {% if section.settings.style_right != '' %}
    "margin-right":"{{ section.settings.style_right }}px",
    {% endif %}
  {% endif %}
  {% if section.settings.background != '' %}
  "background-image":"url({{ section.settings.background | img_url: 'master' }})",
  "background-repeat": "{{ section.settings.background_repeat }}",
  {% if section.settings.background_repeat == 'repeat' %}
    "background-size": "auto",
  {% else %}
    "background-size": "cover",
  {% endif %}
  "background-position": "50% 50%",
  {% endif %}
  {% if section.settings.padding_top != '' %}
  "padding-top":"{{ section.settings.padding_top }}px",
  {% endif %}
  "padding-bottom":"{{ section.settings.padding_bottom }}px"
}'>
  <div class="organic-background-content">
    <div class="container">
      <div class="row">
        <div class="col-sm-6">
          <div class="organic-background-content__image">
              <img src="{{ section.settings.banner_image | img_url: 'master' }}" />
          </div>
        </div>
        <div class="col-sm-6">
          <div class="organic-background-content__desc">
            {% include 'shortcode' load: section.settings.content %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
{
"name": "Background Content",
"settings": [
    {
    "type": "header",
    "content": "Video Banner Settings"
    },
    {
     "type": "checkbox",
     "id": "enable_parallax",
     "default": true,
     "label": "Enable Parallax Background"
    },
    {
    "type": "image_picker",
    "id": "background",
    "label": "Banner Background"
    },
    {
    "type": "select",
    "id": "background_repeat",
    "label": "Background Repeat",
    "options": [
    {
    "value": "no-repeat",
    "label": "No Reapeat"
    },
    {
    "value": "repeat",
    "label": "Repeat"
    }
    ],
    "default": "no-repeat"
    },
    {
    "type": "header",
    "content": "Content Settings"
    },
    {
    "type": "image_picker",
    "id": "banner_image",
    "label": "Banner Image"
    },
    {
      "type": "textarea",
      "id": "content",
      "label": "Content"
    },
    {
      "type": "header",
      "content": "Styles Settings"
    },
    {
     "type": "checkbox",
     "id": "enable_style",
     "default": false,
     "label": "Enable Style Settings"
    },
    {
        "type":      "range",
        "id":        "style_top",
        "min":       0,
        "max":        500,
        "step":       5,
        "unit":       "px",
        "label":     "Space Top",
        "default":   0
    },
    {
        "type":      "range",
        "id":        "style_bottom",
        "min":       0,
        "max":        500,
        "step":       5,
        "unit":       "px",
        "label":     "Space Bottom",
        "default":   0
    },
    {
        "type":      "range",
        "id":        "style_left",
        "min":       0,
        "max":        500,
        "step":       5,
        "unit":       "px",
        "label":     "Space Left",
        "default":   0
    },
    {
        "type":      "range",
        "id":        "style_right",
        "min":       0,
        "max":        500,
        "step":       5,
        "unit":       "px",
        "label":     "Space Right",
        "default":   0
    }
	],
	"presets": [{
      "name": "Background Content",
      "category": "Main Organic"
  	}]
}
{% endschema %}
