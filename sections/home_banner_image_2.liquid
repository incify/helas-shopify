<div data-section-id="{{ section.id }}" data-section-type="banner-image-2-section" class="banner-image-2-section {{section.settings.banner_preset}} {% if section.settings.enable_style == true %}incify-styles{% endif %}" {% if section.settings.enable_style == true %}data-styles='{
  {% if section.settings.style_top != '' %}
  "margin-top":"{{ section.settings.style_top }}px",
  {% endif %}
  {% if section.settings.style_bottom != '' %}
  "margin-bottom":"{{ section.settings.style_bottom }}px",
  {% endif %}
  {% if section.settings.style_left != '' %}
  "margin-left":"{{ section.settings.style_left }}px",
  {% endif %}
  {% if section.settings.style_right != '' %}
  "margin-right":"{{ section.settings.style_right }}px"
  {% endif %}
}'{% endif %}>
    <div class="banner-image-2">
      <div class="grid-x{% if section.settings.banner_space == 'yes' %} grid-padding-x grid-padding-y{% endif %}{% if section.settings.banner_space_y == 'yes' %} grid-padding-y{% endif %} small-up-1 medium-up-1 large-up-{{section.settings.grid}}">
        {% for block in section.blocks %}
        <div class="cell">
          <div class="static-banner-inner pos-{{ block.settings.content_position }}" style="background-color:{{ block.settings.background_color }}">
            <div class="row">
              <div class="banner--image col-sm-6{% if block.settings.content_position == 'left'%} col-sm-push-6{% endif %}">
                <div class="banner--background incify-styles" style="background-image:url({{ block.settings.image_banner | img_url: 'master' }});height:{{ block.settings.banner_height }}vh"></div>
              </div>
              <div class="banner--informations incify-styles col-sm-6{% if block.settings.content_position == 'left'%} col-sm-pull-6{% endif %}" style="height:{{ block.settings.banner_height }}vh">
                <div class="banner--infor">
                  {{ block.settings.text_banner }}
                  {% if block.settings.link_banner and block.settings.banner_button %}
                  <a href="{{ block.settings.link_banner }}" class="btn-button bordered-2 x3 gray uppercase">{{ block.settings.banner_button }}</a>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
</div>
{% schema %}
{
"name": "Banner Image 2",
"max_blocks": 12,
"settings": [
    {
    "type": "header",
    "content": "Banner Image Settings"
    },
    {
      "type": "select",
      "id": "banner_space",
      "label": "Banner X Space",
      "options": [
        {
          "value": "yes",
          "label": "Yes"
        },
        {
          "value": "no",
          "label": "No"
        }
      ],
      "default": "no"
    },
    {
      "type": "select",
      "id": "banner_space_y",
      "label": "Banner Y Space",
      "options": [
        {
          "value": "yes",
          "label": "Yes"
        },
        {
          "value": "no",
          "label": "No"
        }
      ],
      "default": "no"
    },
    {
      "type": "range",
      "id": "grid",
      "label": "Banner per row (Desktop View)",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 2
    },
    {
      "type": "range",
      "id": "grid_2",
      "label": "Banner per row (Tablet View)",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 2
    },
    {
      "type": "header",
      "content": "Styles Settings"
    },
    {
     "type": "checkbox",
     "id": "enable_style",
     "default": false,
     "label": "Enable Style Settings"
    },
    {
        "type":      "range",
        "id":        "style_top",
        "min":       0,
        "max":        500,
        "step":       5,
        "unit":       "px",
        "label":     "Space Top",
        "default":   0
    },
    {
        "type":      "range",
        "id":        "style_bottom",
        "min":       0,
        "max":        500,
        "step":       5,
        "unit":       "px",
        "label":     "Space Bottom",
        "default":   0
    },
    {
        "type":      "range",
        "id":        "style_left",
        "min":       0,
        "max":        500,
        "step":       5,
        "unit":       "px",
        "label":     "Space Left",
        "default":   0
    },
    {
        "type":      "range",
        "id":        "style_right",
        "min":       0,
        "max":        500,
        "step":       5,
        "unit":       "px",
        "label":     "Space Right",
        "default":   0
    }
	],
  "blocks": [
    {
      "type": "banner_item",
      "name": "Banner Item",
      "settings": [
        {
            "type":      "range",
            "id":        "banner_height",
            "min":       10,
            "max":        100,
            "step":       1,
            "unit":       "vh",
            "label":     "Banner Height",
            "default":   45
        },
        {
          "type": "color",
          "id": "background_color",
          "label": "Background Color",
          "default": "#f7f7f7"
        },
        {
          "type": "image_picker",
          "id": "image_banner",
          "label": "Banner Image"
        },
        {
          "type": "select",
          "id": "content_position",
          "label": "Content Position",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "left"
        },
        {
          "type": "textarea",
          "id": "text_banner",
          "label": "Text Banner"
        },
        {
          "type": "url",
          "id": "link_banner",
          "label": "Banner Link"
        },
        {
          "type": "text",
          "id": "banner_button",
          "label": "Banner Button"
        }
      ]
    }
  ],
	"presets": [{
      "name": "Banner Image 2",
      "category": "Banner Image"
  	}]
}
{% endschema %}
