<div class="faqs-style-2">
    <section class="faqs-top">
        <div class="faqs-total-title">
            <div class="container">
                <div class="row">
                    <div class="content-text">
                        <h2>
                            {% if section.settings.title_faqs_total != blank %}
                            {{ section.settings.title_faqs_total }}
                            {% endif %}
                        </h2>
                        <p>
                            {% if section.settings.sub_title_faqs_total != blank %}
                            {{ section.settings.sub_title_faqs_total }}
                            {% endif %}
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-faqs-inner">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6">
                        {% if section.blocks.size > 0 %}
                        {% for block in section.blocks %}
                        {% if block.settings.questions_faqs != blank and block.settings.answer_faqs != blank %}
                        <div class="item">
                            <div class="content">
                                <div class="content-faqs">
                                    <div class="pertinacia">
                                        {% if block.settings.questions_faqs != blank %}
                                        <p class="faqs1"> {{ block.settings.questions_faqs }}</p>
                                        {% endif %}
                                        {% if block.settings.answer_faqs != blank %}
                                        <p class="faqs12">{{ block.settings.answer_faqs }}</p>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endif %}
                        {% endfor %}
                        {% endif %}
                    </div>
                    <div class="col-sm-6">
                        {% if section.blocks.size > 0 %}
                        {% for block in section.blocks %}
                        {% if block.settings.questions_faqs1 != blank and block.settings.answer_faqs1 != blank %}
                        <div class="item">
                            <div class="content">
                                <div class="content-faqs">
                                    <div class="pertinacia">
                                        {% if block.settings.questions_faqs1 != blank %}
