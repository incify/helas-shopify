<div data-section-id="{{ section.id }}" class="section__watch-content-box {{ section.id }}">
  <div class="watch__content-box row no-gutters display-flex">
    <div class="nova-column col-md-6{% if section.settings.image_right == true %} col-md-push-6{% endif %}">
      <div class="colunm-inner watch__content-box--image incify-lazyload-image" data-background-image="{{ section.settings.image | img_url: 'master' }}" data-auto-padding="false"></div>
    </div>
    <div class="nova-column col-md-6{% if section.settings.image_right == true %} col-md-pull-6{% endif %}">
      <div class="watch__content-box--content text-center colunm-inner lg-mt-250 md-mt-150 sm-mt-100 xs-mt-50 lg-mb-250 md-mb-150 sm-mb-100 xs-mb-50">
        <h1>{{ section.settings.content_title }}</h1>
        <span class="la-line"></span>
        <p class="special-font">
          {{ section.settings.content_text }}
        </p>
        {% if section.settings.button_link %}
        <div class="conent-button">
          <a href="{{ section.settings.button_link }}" class="btn-button bordered x2 uppercase">{{ section.settings.button_title }}</a>
        </div>
        {% endif %}
      </div>
      <div class="home-10-divider-gradient"></div>
    </div>
  </div>
</div>
<span class="custom-styles-css">
  .{{ section.id }} .home-10-divider-gradient {
    background-image: linear-gradient(90deg,{{ section.settings.from_color }} 0,{{ section.settings.to_color }} 100%);
  }
</span>
{% schema %}
{
  "name": "Content Box",
  "settings": [
    {
      "type": "header",
      "content": "Content Box Settings"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Box Image"
    },
    {
     "type": "checkbox",
     "id": "image_right",
     "default": false,
     "label": "Show Image Right"
    },
    {
      "type": "text",
      "id": "content_title",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "content_text",
      "label": "Content"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_title",
      "label": "Button Title"
    },
    {
      "type": "header",
      "content": "Border Gradient Settings"
    },
    {
      "type": "color",
      "id": "from_color",
      "label": "Gradient From Color",
      "default": "#d3b48c"
    },
    {
      "type": "color",
      "id": "to_color",
      "label": "Gradient To Color",
      "default": "#f5bbbb"
    }
  ],
  "presets": [
    {
      "name": "Content Box",
      "category": "Watch Main"
    }
  ]
}
{% endschema %}
