<div data-section-id="{{ section.id }}" class="bakery-subscribe-section">
  <div class="bakery-newsletter">
    <div class="row display-flex">
      <div class="nova-column col-md-6 left-content">
        <div class="colunm-inner">
          <h1>{{ section.settings.left_title }}</h1>
          <div class="bakery-newsletter__content">
            {{ section.settings.left_text }}
            {% if section.settings.left_phone != blank or  section.settings.left_email != blank %}
            <div class="custom-component-inner clearfix">
              {% if section.settings.left_phone != blank %}
              <div class="la_compt_iem la_com_action--linktext">
                <a class="component-target" href="tel:{{section.settings.left_phone}}"> <i class="text-color-primary fa fa-phone"></i><span class="component-target-text">{{section.settings.left_phone}}</span> </a>
              </div>
              {% endif %}
              {% if section.settings.left_email != blank %}
              <div class="la_compt_iem la_com_action--linktext">
                <a class="component-target" href="mailto:{{section.settings.left_email}}"> <i class="text-color-primary fa fa-envelope"></i><span class="component-target-text">{{section.settings.left_email}}</span> </a>
              </div>
              {% endif %}
            </div>
            {% endif %}
          </div>
        </div>
      </div>
      <div class="nova-column col-md-6 right-content">
        <div class="colunm-inner">
          <h2>{{ section.settings.right_title }}</h2>
          <p class="sub-title">
            {{ section.settings.right_sub_title }}
          </p>
          <form action="{{ form_action }}" method="post" target="_blank" name="mc-embedded-subscribe-form">
            <div class="input-group">
              <input id="fc-email" type="email" value="{% if customer %}{{ customer.email }}{% endif %}" placeholder="{{ 'general.newsletter_form.newsletter_email' | t }}" name="EMAIL" class="input-group-field" aria-label="{{ 'general.newsletter_form.newsletter_email' | t }}">
              <button type="submit" class="btn-button" name="subscribe" {% if settings.language_enable %}data-translate="general.newsletter_form.subscribe"{% endif %}>{{ 'general.newsletter_form.subscribe' | t }}</button>
            </div>
            <label id="fc-response" for="fc-email"></label>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<span class="custom-styles-css">
  body div[data-section-id="{{ section.id }}"]{
  {% if section.settings.enable_style == true %}
    {% if section.settings.style_top != '' %}
    margin-top:{{ section.settings.style_top }}px;
    {% endif %}
    {% if section.settings.style_bottom != '' %}
    margin-bottom:{{ section.settings.style_bottom }}px;
    {% endif %}
    {% if section.settings.style_left != '' %}
    margin-left:{{ section.settings.style_left }}px;
    {% endif %}
    {% if section.settings.style_right != '' %}
    margin-right:{{ section.settings.style_right }}px;
    {% endif %}
  {% endif %}
}
body div[data-section-id="{{ section.id }}"] .left-content {
  background-image:url({{ section.settings.left_background | img_url: 'master' }});
}
body div[data-section-id="{{ section.id }}"] .right-content {
  background-image:url({{ section.settings.right_background | img_url: 'master' }});
}
</span>
{% schema %}
{
"name": "Bakery Subscribe",
"settings": [
    {
      "type": "header",
      "content": "Left Box Settings"
    },
    {
      "type": "image_picker",
      "id": "left_background",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "left_title",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "left_text",
      "label": "Content"
    },
    {
      "type": "text",
      "id": "left_phone",
      "label": "Phone"
    },
    {
      "type": "text",
      "id": "left_email",
      "label": "Email"
    },
    {
      "type": "header",
      "content": "Right Box Settings"
    },
    {
      "type": "image_picker",
      "id": "right_background",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "right_title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "right_sub_title",
      "label": "Sub Title"
    },
    {
     "type": "checkbox",
     "id": "enable_style",
     "default": false,
     "label": "Enable Style Settings"
    },
    {
        "type":      "range",
        "id":        "style_top",
        "min":       0,
        "max":        500,
        "step":       5,
        "unit":       "px",
        "label":     "Space Top",
        "default":   0
    },
    {
        "type":      "range",
        "id":        "style_bottom",
        "min":       0,
        "max":        500,
        "step":       5,
        "unit":       "px",
        "label":     "Space Bottom",
        "default":   0
    },
    {
        "type":      "range",
        "id":        "style_left",
        "min":       0,
        "max":        500,
        "step":       5,
        "unit":       "px",
        "label":     "Space Left",
        "default":   0
    },
    {
        "type":      "range",
        "id":        "style_right",
        "min":       0,
        "max":        500,
        "step":       5,
        "unit":       "px",
        "label":     "Space Right",
        "default":   0
    }
	],
	"presets": [{
      "name": "Bakery Subscribe",
      "category": "Bakery Main"
  	}]
}
{% endschema %}
