<div data-section-id="{{ section.id }}" data-section-type="banner-image-section" class="banner-image-section {{section.settings.banner_preset}}{% if section.settings.banner_space == 'yes' %} has-space{% endif %} {% if section.settings.enable_style == true %}incify-styles{% endif %}" {% if section.settings.enable_style == true %}data-styles='{
  {% if section.settings.style_top != '' %}
  "margin-top":"{{ section.settings.style_top }}px",
  {% endif %}
  {% if section.settings.style_bottom != '' %}
  "margin-bottom":"{{ section.settings.style_bottom }}px",
  {% endif %}
  {% if section.settings.style_left != '' %}
  "margin-left":"{{ section.settings.style_left }}px",
  {% endif %}
  {% if section.settings.style_right != '' %}
  "margin-right":"{{ section.settings.style_right }}px"
  {% endif %}
}'{% endif %}>
    <div class="banner-image{% if section.settings.width_layout == 'boxed' %} container{% endif %}">
      <div{% if section.settings.width_layout == 'boxed' %} class="row"{% endif %}>
        <div class="grid-x{% if section.settings.banner_space == 'yes' %} grid-padding-y grid-padding-x{% endif %}{% if section.settings.show_content_when_hover %} content-visible-when-hover{% endif %} small-up-1 medium-up-{{section.settings.grid_2}} large-up-{{section.settings.grid}}">
          {% for block in section.blocks %}
          <div class="cell">
            <div class="box-inner">
                <div class="banner--image incify-lazyload-image banner-background-1" data-background-image="{{ block.settings.image_banner | img_url: 'master' }}" data-auto-padding="true"></div>
                {% if block.settings.text_banner != blank %}
                <div class="banner--infor">
                    {% case section.settings.banner_preset %}
                    {% when 'style_3' %}
                    <h3{% if block.settings.text_banner_color != '' %} style="color:{{ block.settings.text_banner_color }}"{% endif %}>{{ block.settings.text_banner }}</h3>
                    <h1{% if block.settings.text_banner_color_2 != '' %} style="color:{{ block.settings.text_banner_color_2 }}"{% endif %}>{{ block.settings.text_banner_2 }}</h1>
                    <p{% if block.settings.text_banner_color_3 != '' %} style="color:{{ block.settings.text_banner_color_3 }}"{% endif %}>{{ block.settings.text_banner_3 }}</p>
                    {% if block.settings.banner_button != '' %}
                    <a class="btn-button bordered-2 x3" href="{% if section.settings.link_banner != blank %}{{section.settings.link_banner}}{% else %}#{% endif %}">{{ block.settings.banner_button }}</a>
                    {% endif %}
                    {% when 'style_7' %}
                    <h3{% if block.settings.text_banner_color != '' %} style="color:{{ block.settings.text_banner_color }}"{% endif %}>{{ block.settings.text_banner }}</h3>
                    <h1{% if block.settings.text_banner_color_2 != '' %} style="color:{{ block.settings.text_banner_color_2 }}"{% endif %}>{{ block.settings.text_banner_2 }}</h1>
                    {% if block.settings.banner_button != '' %}
                    <a class="icon-button" href="{% if section.settings.link_banner != blank %}{{section.settings.link_banner}}{% else %}#{% endif %}">{{ block.settings.banner_button }}</a>
                    {% endif %}
                    {% when 'style_10' %}
                    <h3{% if block.settings.text_banner_color != '' %} style="color:{{ block.settings.text_banner_color }}"{% endif %}>{{ block.settings.text_banner }}</h3>
                    <h1{% if block.settings.text_banner_color_2 != '' %} style="color:{{ block.settings.text_banner_color_2 }}"{% endif %}>{{ block.settings.text_banner_2 }}</h1>
                    {% if block.settings.banner_button != '' %}
                    <a class="btn-button large bordered x2" href="{% if section.settings.link_banner != blank %}{{section.settings.link_banner}}{% else %}#{% endif %}">{{ block.settings.banner_button }}</a>
                    {% endif %}
                    {% when 'style_14_2' %}
                    <h3{% if block.settings.text_banner_color != '' %} style="color:{{ block.settings.text_banner_color }}"{% endif %}>{{ block.settings.text_banner }}</h3>
                    <h1{% if block.settings.text_banner_color_2 != '' %} style="color:{{ block.settings.text_banner_color_2 }}"{% endif %}>{{ block.settings.text_banner_2 }}</h1>
                    {% if block.settings.banner_button != '' %}
                    <a class="btn-button small black uppercase" href="{% if section.settings.link_banner != blank %}{{section.settings.link_banner}}{% else %}#{% endif %}">{{ block.settings.banner_button }}</a>
                    {% endif %}
                    {% else %}
                      <h1{% if block.settings.text_banner_color != '' %} style="color:{{ block.settings.text_banner_color }}"{% endif %}>{{ block.settings.text_banner }}</h1>
                      {% if block.settings.banner_button != '' %}
                      <a class="btn-button bordered-2 x3" href="{% if section.settings.link_banner != blank %}{{section.settings.link_banner}}{% else %}#{% endif %}">{{ block.settings.banner_button }}</a>
                      {% endif %}
                    {% endcase %}
                </div>
                {% endif %}
                <a class="link-shop-overlay" href="{% if section.settings.link_banner != blank %}{{section.settings.link_banner}}{% else %}#{% endif %}"></a>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>
    </div>
</div>
{% schema %}
{
"name": "Banner Image",
"max_blocks": 12,
"settings": [
    {
    "type": "header",
    "content": "Banner Image Settings"
    },
    {
      "type": "select",
      "id": "banner_preset",
      "label": "Preset",
      "options": [
    {
      "value": "style_1",
      "label": "Style 1"
    },
    {
      "value": "style_2",
      "label": "Style 2"
    },
    {
      "value": "style_3",
      "label": "Style 3"
    },
    {
      "value": "style_7",
      "label": "Style 7"
    },
    {
      "value": "style_10",
      "label": "Style 10"
    },
    {
      "value": "style_14",
      "label": "Style 14"
    },
    {
      "value": "style_14_2",
      "label": "Style 14 2"
    }
    ],
    "default": "style_1"
    },
    {
    "type": "select",
    "id": "width_layout",
    "label": "Display Full Width / Boxed",
    "options": [
    {
    "value": "full",
    "label": "Full Width"
    },
    {
    "value": "boxed",
    "label": "Boxed"
    }
    ],
    "default": "full"
    },
    {
      "type": "select",
      "id": "banner_space",
      "label": "Banner Space",
      "options": [
        {
          "value": "yes",
          "label": "Yes"
        },
        {
          "value": "no",
          "label": "No"
        }
      ],
      "default": "no"
    },
    {
      "type": "range",
      "id": "grid",
      "label": "Banner per row (Desktop View)",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "id": "grid_2",
      "label": "Banner per row (Tablet View)",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 3
    },
    {
     "type": "checkbox",
     "id": "show_content_when_hover",
     "default": false,
     "label": "Just display content when hover"
    },
    {
      "type": "header",
      "content": "Styles Settings"
    },
    {
     "type": "checkbox",
     "id": "enable_style",
     "default": false,
     "label": "Enable Style Settings"
    },
    {
        "type":      "range",
        "id":        "style_top",
        "min":       0,
        "max":        500,
        "step":       5,
        "unit":       "px",
        "label":     "Space Top",
        "default":   0
    },
    {
        "type":      "range",
        "id":        "style_bottom",
        "min":       0,
        "max":        500,
        "step":       5,
        "unit":       "px",
        "label":     "Space Bottom",
        "default":   0
    },
    {
        "type":      "range",
        "id":        "style_left",
        "min":       0,
        "max":        500,
        "step":       5,
        "unit":       "px",
        "label":     "Space Left",
        "default":   0
    },
    {
        "type":      "range",
        "id":        "style_right",
        "min":       0,
        "max":        500,
        "step":       5,
        "unit":       "px",
        "label":     "Space Right",
        "default":   0
    }
	],
  "blocks": [
    {
      "type": "banner_item",
      "name": "Banner Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_banner",
          "label": "Banner Image"
        },
        {
        "type": "header",
        "content": "Banner Text Settings"
        },
        {
          "type": "text",
          "id": "text_banner",
          "label": "Text"
        },
        {
          "type": "color",
          "id": "text_banner_color",
          "label": "Color"
        },
        {
        "type": "header",
        "content": "Banner Text 2 Settings"
        },
        {
          "type": "text",
          "id": "text_banner_2",
          "label": "Text"
        },
        {
          "type": "color",
          "id": "text_banner_color_2",
          "label": "Color"
        },
        {
        "type": "header",
        "content": "Banner Text 3 Settings"
        },
        {
          "type": "text",
          "id": "text_banner_3",
          "label": "Text"
        },
        {
          "type": "color",
          "id": "text_banner_color_3",
          "label": "Color"
        },
        {
        "type": "header",
        "content": "Banner Button Settings"
        },
        {
          "type": "url",
          "id": "link_banner",
          "label": "Banner Link"
        },
        {
          "type": "text",
          "id": "banner_button",
          "label": "Banner Button"
        }
      ]
    }
  ],
	"presets": [{
      "name": "Banner Image",
      "category": "Banner Image"
  	}]
}
{% endschema %}
