  },
  {
    "type": "image_picker",
    "id": "banner_image_1",
    "label": "Banner Image"
  },
  {
    "type": "textarea",
    "id": "banner_text_1",
    "label": "Banner Text"
  },
  {
    "type": "url",
    "id": "banner_url_1",
    "label": "Banner Url"
  },
  {
    "type": "header",
