<div class="blog-post-layout post_layout_grid-2 enable-main-fullwidth">
    <div class="container blog-wrapper">
        <div class="row">
            {% for article in blog.articles %}
            <div class="{% if settings.number_column_grid != blank %}col-md-{{ settings.number_column_grid }}{% endif %} col-sm-6 itempost-grid">
                <div class="blog_item--inner item-inner">
                    <div class="blog_item--inner2 item-inner-wrap">
                        <div class="thumb-overlay" style="background-image:url({{ article.image.src | img_url: '1000x800'}})"></div>
                        <div class="blog_item--info clearfix">
                            <header class="blog_item--title entry-header">
                                <h2 class="entry-title">
                                    <a href="{{ article.url }}">
                                        {% if settings.language_enable %}
                                        <span class="lang1">{{ article.title | split: '|' | first }}</span>
                                        <span class="lang2">{{ article.title | split: '|' | last }}</span>
                                        {% else %}
                                        {{ article.title | split: '|' | first }}
                                        {% endif %}
                                    </a>
                                </h2>
                            </header>
                            <div class="blog_item--meta entry-meta clearfix">
                                <div class="date_comment">
                                    <div class="author_post">
                                        <span>{{ article.author }}</span>
                                    </div>
                                    <div class="post-date">
                                        <span class="day">{{ article.published_at | date: '%d' }}</span>
                                        <span class="month">{{ article.published_at | date: '%b' }}, </span>
                                        <span class="year">{{ article.published_at | date: '%Y' }}</span>
                                    </div>
                                </div>
                            </div>
                            <div class="blog_item--excerpt entry-excerpt">
                                {% if settings.language_enable %}
                                <span class="lang1">{{ article.content | strip_html | split: '[lang2]' | first | truncatewords: 24 }}</span>
                                <span class="lang2">{{ article.content | strip_html | split: '[lang2]' | last | truncatewords: 24 }}</span>
                                {% else %}
                                {{ article.content | strip_html | split: '[lang2]' | first | truncatewords: 24}}
                                {% endif %}
                            </div>
                            <footer class="blog_item--meta-footer clearfix">
                                <a class="btn-button bordered gradien_hover" href="{{ article.url }}" {% if settings.language_enable %}data-translate="blogs.article.read_more"{% endif %}>{{ 'blogs.article.read_more' | t }}</a>
                            </footer>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        {% if paginate.pages > 1 %}
        <div class="pagenav-wrap">
            <div class="pagination">
                {% include 'pagination' %}
            </div>
        </div>
        {% endif %}
    </div>
</div>